# URL publik aplikasi (dipakai di link/redirect)
PAPERLESS_URL=https://<your-app>.koyeb.app

# Secret key random (buat Django)
PAPERLESS_SECRET_KEY=<random-long-secret>

# Database (Supabase PostgreSQL)
PAPERLESS_DBHOST=${SUPABASE_DB_HOST}
PAPERLESS_DBPORT=${SUPABASE_DB_PORT}
PAPERLESS_DBUSER=${SUPABASE_DB_USER}
PAPERLESS_DBPASS=${SUPABASE_DB_PASS}
PAPERLESS_DBNAME=${SUPABASE_DB_NAME}

# Redis (Upstash)
PAPERLESS_REDIS=${UPSTASH_REDIS_URL}

# Backblaze S3 credentials
B2_ACCESS_KEY_ID=<your-key-id>
B2_SECRET_ACCESS_KEY=<your-application-key>
B2_ENDPOINT=https://s3.us-west-002.backblazeb2.com
B2_BUCKET=paperless-docs

# Rclone remote config (auto-generated dari env)
RCLONE_CONFIG_B2REMOTE_TYPE=s3
RCLONE_CONFIG_B2REMOTE_PROVIDER=Other
RCLONE_CONFIG_B2REMOTE_ACCESS_KEY_ID=${B2_ACCESS_KEY_ID}
RCLONE_CONFIG_B2REMOTE_SECRET_ACCESS_KEY=${B2_SECRET_ACCESS_KEY}
RCLONE_CONFIG_B2REMOTE_ENDPOINT=${B2_ENDPOINT}
RCLONE_CONFIG_B2REMOTE_REGION=us-west-002
